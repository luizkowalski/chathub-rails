<div class="row">
  <div class="col-lg-1">
    <a href="#" class="thumbnail">
      <img src="<%= @room.avatar %>">
    </a>
  </div>
  <div class="col-lg-10">
    <div class="page-header">
      <h3>You are seeing the last 1k messages <small>We're working to make it bigger</small></h3>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
      <h3 class="panel-title">Room's history</h3>
      </div>
      <div class="panel-body">
        <ul class="list-unstyled chat" id="chat-room">
         <% for message in @messages do %>
          <%= react_component('Comment', { message: message.to_send }, { prerender: true }) %>
         <% end %>
       </ul>
     </div>
   </div>
 </div>
</div>

<script>
  $(document).ready(function() {
   scrollChatRoom();
 });
</script>